# Script
#     getGcc
#
# Description
#     Get Gcc, GMP, MPFR and MPC and unpack them.
#
#------------------------------------------------------------------------------
gmpPACKAGE=gmp-5.0.1
mpfrPACKAGE=mpfr-2.4.2
mpcPACKAGE=mpc-0.8.1
gccPACKAGE=gcc-4.5.1

#------------------------------------------------------------------------------
# run from third-party directory only
wmakeCheckPwd "$WM_THIRD_PARTY_DIR" || {
    echo "Error: Current directory is not \$WM_THIRD_PARTY_DIR"
    echo "    The environment variables are inconsistent with the installation."
    echo "    Check the OpenFOAM entries in your dot-files and source them."
    exit 1
}
. etc/tools/ThirdPartyFunctions
#------------------------------------------------------------------------------

usage() {
    exec 1>&2
    while [ "$#" -ge 1 ]; do echo "$1"; shift; done
    cat<<USAGE

usage: ${0##*/} [gmp-VERSION] [mpfr-VERSION] [mpc-VERSION] [gcc-VERSION]

* build combinations of gmp, mpfr, mpc and gcc
      $gmpPACKAGE
      $mpfrPACKAGE
      $mpcPACKAGE
      $gccPACKAGE

USAGE
    exit 1
}

getFile() {
  packageDir=$1
  tarFile=$2
  url=$3

  if [ ! -d ${packageDir} ]
  then
      downloadFile $tarFile $url

      if [ -e download/$tarFile ]
      then
          echo "unpack download/$tarFile"
          tar -xf download/$tarFile
      else
          echo "no download/$tarFile to unpack"
      fi
  fi
}

# parse options
while [ "$#" -gt 0 ]
do
    case "$1" in
    -h | -help)
        usage
        ;;
    gmp-[4-9]*)
        gmpPACKAGE="${1%%/}"
        shift
        ;;
    mpfr-[2-9]*)
        mpfrPACKAGE="${1%%/}"
        shift
        ;;
    mpc-[0-9]*)
        mpcPACKAGE="${1%%/}"
        shift
        ;;
    gcc-[4-9]*)
        gccPACKAGE="${1%%/}"
        shift
        ;;
    *)
        usage "unknown option/argument: '$*'"
        ;;
    esac
done

gmpFile=$gmpPACKAGE.tar.bz2
mpfrFile=$mpfrPACKAGE.tar.bz2
mpcFile=$mpcPACKAGE.tar.gz
gccFile=$gccPACKAGE.tar.bz2

gmpUrl="ftp://ftp.gnu.org/gnu/gmp/$gmpFile"
mpfrUrl="http://ftp.gnu.org/gnu/mpfr/$mpfrFile"
mpcUrl="http://www.multiprecision.org/mpc/download/$mpcFile"
gccUrl="http://www.mirrorservice.org/sites/sourceware.org/pub/gcc/releases/$gccPACKAGE/$gccFile"

getFile ${gmpPACKAGE} ${gmpFile} ${gmpUrl}
getFile ${mpfrPACKAGE} ${mpfrFile} ${mpfrUrl}
getFile ${mpcPACKAGE} ${mpcFile} ${mpcUrl}
getFile ${gccPACKAGE} ${gccFile} ${gccUrl}

# ----------------------------------------------------------------- end-of-file
